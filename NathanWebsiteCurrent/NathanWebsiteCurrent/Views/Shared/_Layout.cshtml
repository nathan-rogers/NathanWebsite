<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nathan Rogers.</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="~/Content/styles.css" />;
</head>
<body>

    <div class="navbar-trans">
        <div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nathan Rogers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="pull-right">
                    <ul class="nav navbar-nav">

                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>

                        <li><a href="@Url.Action("About", "Home")">About Me</a></li>
                        <li><a href="@Url.Action("Work", "Home")">My Work</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>

            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            <p class="media-icon"><a href="https://www.linkedin.com/in/nathandrogers" class="btn btn-block btn-default">Learn about me <span></span></a></p>
            
LinkedIn
</a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
