<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nathan Rogers.</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="~/Content/styles.css" />;
</head>
<body>

    <div class="navbar-trans">
        <div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nathan Rogers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="pull-right">
                    <ul class="nav navbar-nav">
                        

                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>

                        <li><a href="@Url.Action("About", "Home")">About Me</a></li>
                        <li><a href="@Url.Action("Work", "Home")">My Work</a></li>
                        <li>
                            <div class="media-icons">

                                <a href="https://www.linkedin.com/in/nathandrogers" target="_blank"><img src="~/Content/Media/blueprints.png" /></a>
                                <a href="https://www.facebook.com/nathan.rogers.39982" target="_blank"><img src="~/Content/Media/facebook-128.png" /></a>
                                <a href="https://github.com/nathan-rogers" target="_blank"><img src="~/Content/Media/github-128.png" /></a>
                                <a href="https://twitter.com/nathandrogers" target="_blank"><img src="~/Content/Media/twitter-128.png" /></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <ul>
                <li><a href="@Url.Action("Resume","Home")">Resume</a></li>
                <li><a href="@Url.Action("About","Home")">Contact</a></li>
            </ul>
            
            <div class="media-icons">

                <a href="https://www.linkedin.com/in/nathandrogers" target="_blank"><img src="~/Content/Media/blueprints.png" /></a>
                <a href="https://www.facebook.com/nathan.rogers.39982" target="_blank"><img src="~/Content/Media/facebook-128.png" /></a>
                <a href="https://github.com/nathan-rogers" target="_blank"><img src="~/Content/Media/github-128.png" /></a>
                <a href="https://twitter.com/nathandrogers" target="_blank"><img src="~/Content/Media/twitter-128.png" /></a>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
